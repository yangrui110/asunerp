        <attribute name="message" type="String" mode="IN" optional="true"/>
        <attribute name="result" type="String" mode="OUT"/>
    </service>

    <service name="testScriptEngineGroovyMethod" engine="script" location="component://common/script/com/hanlin/fadp/common/GroovyServiceTest.groovy" invoke="testMethod">
