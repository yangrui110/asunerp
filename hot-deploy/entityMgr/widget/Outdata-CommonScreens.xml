<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <widgets>

                <platform-specific>
                    <html>
                        <html-template location="component://entityMgr/webapp/entityMgr/includes/css-js.ftl"/>
                        <html-template location="component://entityMgr/webapp/outdata/includes/header.ftl"/>
                    </html>
                </platform-specific>

                <decorator-section-include name="left"/>
                <container style="pane ui-layout-center">
                    <decorator-section-include name="body"/>
                </container>
                <platform-specific>
                    <html>
                        <html-template location="component://entityMgr/webapp/entityMgr/includes/footer.ftl"/>
                    </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="header-footer">
        <section>
            <widgets>

                <platform-specific>
                    <html>
                        <html-template location="component://entityMgr/webapp/entityMgr/includes/css-js.ftl"/>
                        <html-template location="component://entityMgr/webapp/outdata/includes/header.ftl"/>
                    </html>
                </platform-specific>
                <decorator-section-include name="body"/>


                <platform-specific>
                    <html>
                        <html-template location="component://entityMgr/webapp/entityMgr/includes/footer.ftl"/>
                    </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>

</screens>
	
	

